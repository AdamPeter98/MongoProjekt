// A 2-es schmea versionnal rendelkezo Splesartok hoseinek a reszletes leirasa
db.Splesartok.aggregate(
    [
    {
            $match: {
                schema_version: 2
        }
    },
    {
        $lookup: {
            from: "Hos",
            localField: "hosok.nev",
            foreignField: "nev",
            as: "hosokDetail"
        }
    }
]
) 

//Azok a hosok akik tobb mint 200 meccsben resztvettek emeljuk meg az arukat 
db.Hos.aggregate([
    {
        $project: {
            nev: 1,
            meccsekSzama: 1,
            ujAr: {
                $cond: {if: {$gte: [
                            "$ar",
                            200
                        ]
                    },then: {
                    $multiply: [
                            "$ar",
                            1.2
                        ]
                    }, else: 20
                }
            }
        }
    }
])

