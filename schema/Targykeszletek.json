db.createCollection("Targykeszletek", {
    "validator": {
       "$jsonSchema": {
      "bsonType": "object",
      "required": ["schema_version","hos","items"],
      "properties": {
         "hos": {
                 "bsonType": ["object"],
                 "required": [ "nev"],
                 "properties": {
                         "nev": {
                                 "bsonType": "string"
                         },
                 }
         },
         "schema_version": {
                "bsonType": "int"
         },
         "items":{
             "bsonType": ["array"],
             "minItems": 6, 
             "uniqueItems": true,
             "items": {
                 "bsonType": ["objectId"]
             }
         }
      }
     }
   } 
 })